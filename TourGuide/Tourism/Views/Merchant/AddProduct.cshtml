@using Tourism.ViewModel
@model ProductViewModel

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Add New Product</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="AddProduct" asp-controller="Merchant" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label asp-for="name" class="form-label fw-bold"></label>
                            <input asp-for="name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="name" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="count" class="form-label fw-bold"></label>
                            <input asp-for="count" class="form-control" type="number" placeholder="Enter quantity" />
                            <span asp-validation-for="count" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="description" class="form-label fw-bold"></label>
                            <textarea asp-for="description" class="form-control" rows="3" placeholder="Describe your product"></textarea>
                            <span asp-validation-for="description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="price" class="form-label fw-bold"></label>
                                    <input asp-for="price" class="form-control" type="number" step="0.01" placeholder="Product price" />
                                    <span asp-validation-for="price" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="offer" class="form-label fw-bold"></label>
                                    <input asp-for="offer" class="form-control" type="number" step="0.01" placeholder="Discount or offer (optional)" />
                                    <span asp-validation-for="offer" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="category" class="form-label fw-bold"></label>
                            <select asp-for="category" class="form-select">
                                <option value="">-- Select a Category --</option>
                                <option>Souvenirs</option>
                                <option>Travel</option>
                                <option>Beach</option>
                                <option>Sports</option>
                                <option>Cosmetics</option>
                                <option>Clothing</option>
                                <option>Jewelry</option>
                                <option>Electronics</option>
                                <option>Health</option>
                                <option>Food</option>
                                <option>Art</option>
                                <option>Books</option>      
                            </select>
                            <span asp-validation-for="category" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="DeliversWithin" class="form-label fw-bold">Delivery (days)</label>
                                <input asp-for="DeliversWithin" id="deliveryInput" class="form-control" type="number" min="1" max="30" value="1" placeholder="1" />
                                <span asp-validation-for="DeliversWithin" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Upload at least 4 images</label>
                            <input type="file" name="UploadedImages" class="form-control" multiple accept="image/*" />
                            <span asp-validation-for="UploadedImages" class="text-danger small"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill shadow-sm">
                                <i class="bi bi-plus-circle"></i> Add Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    const deliveryInput = document.getElementById('deliveryInput');

    deliveryInput.addEventListener('input', function() {
        let value = parseInt(this.value);

        if (isNaN(value) || value < 1) {
            this.value = 1;
        } else if (value > 30) {
            this.value = 30;
        }
    });
</script>