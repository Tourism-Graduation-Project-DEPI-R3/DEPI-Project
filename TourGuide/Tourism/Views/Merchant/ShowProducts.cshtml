@using Tourism.ViewModel
@model List<ProductViewModel>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Price</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.count <= 0)
            {
                continue;
            }
            <tr>
                <td>@item.name</td>
                <td>@item.count</td>
                <td>@item.price</td>

                <td>
                    @(item.accepted ? "Accepted" : "Pending")
                </td>

                <td>
                    <form asp-controller="Merchant" asp-action="EditProduct" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="@item.id" />
                        <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                    </form>

                    <form asp-controller="Merchant" asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
