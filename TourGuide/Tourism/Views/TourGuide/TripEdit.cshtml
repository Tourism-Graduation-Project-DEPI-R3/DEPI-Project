@model Tourism.Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
}

<div class="page-scale">
    <div class="container py-5 add-trip-container">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="card shadow-lg border-0 rounded-3 add-trip-card">
                    <div class="card-header bg-warning text-dark p-4 rounded-top-3 d-flex flex-column gap-1">
                        <h3 class="mb-0">
                            <i class="bi bi-pencil-square me-2"></i>
                            Edit Trip
                        </h3>
                        <small class="text-dark-50">
                            Update trip information below.
                        </small>
                    </div>

                    <div class="card-body p-5">
                        <form asp-controller="TourGuide"
                              asp-action="TripEditActual"
                              method="post"
                              enctype="multipart/form-data"
                              class="needs-validation"
                              novalidate>

                            @Html.AntiForgeryToken()

                            <!-- Trip Id (hidden) -->
                            <input type="hidden" asp-for="id" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Basic Info -->
                            <h5 class="section-title text-primary mb-3 border-bottom pb-2">
                                Basic Information
                            </h5>

                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="name" class="form-control" />
                                        <label asp-for="name"></label>
                                        <span asp-validation-for="name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="destination" class="form-control" />
                                        <label asp-for="destination"></label>
                                        <span asp-validation-for="destination" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="triptype" class="form-control" />
                                        <label asp-for="triptype">Trip Type</label>
                                        <span asp-validation-for="triptype" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="cost" type="number" step="0.01" class="form-control" />
                                        <label asp-for="cost"></label>
                                        <span asp-validation-for="cost" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="Duration" type="number" class="form-control" />
                                        <label asp-for="Duration"></label>
                                        <span asp-validation-for="Duration" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- NEW: Schedule & Capacity -->
                            <h5 class="section-title text-primary mb-3 border-bottom pb-2">
                                Schedule & Capacity
                            </h5>

                            <div class="row g-3 mb-4">
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="StartDate" type="date" class="form-control" />
                                        <label asp-for="StartDate">Start Date</label>
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="Capacity" type="number" min="1" class="form-control" />
                                        <label asp-for="Capacity">Capacity</label>
                                        <span asp-validation-for="Capacity" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="RemainingSeats" class="form-control" readonly />
                                        <label asp-for="RemainingSeats">Remaining Seats</label>
                                        <span asp-validation-for="RemainingSeats" class="text-danger"></span>
                                    </div>
                                    <small class="text-muted">
                                        This value is calculated based on bookings. You usually shouldn't edit it manually.
                                    </small>
                                </div>
                            </div>

                            <!-- Description -->
                            <h5 class="section-title text-primary mb-3 border-bottom pb-2 mt-4">
                                Details
                            </h5>

                            <div class="mb-4">
                                <div class="form-floating">
                                    <textarea asp-for="description"
                                              class="form-control"
                                              style="height: 150px"></textarea>
                                    <label asp-for="description"></label>
                                    <span asp-validation-for="description" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Main Image -->
                            <h5 class="section-title text-primary mb-3 border-bottom pb-2 mt-4">
                                Main Image
                            </h5>

                            <div class="mb-3">
                                @if (Model.MainImage != null && Model.MainImage.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.MainImage)"
                                         class="img-thumbnail mb-2"
                                         style="max-width:200px;" />
                                }
                                else
                                {
                                    <p class="text-muted mb-2">No main image uploaded yet.</p>
                                }

                                <input type="file"
                                       name="MainImage"
                                       class="form-control"
                                       accept="image/*" />
                                <small class="text-muted">
                                    Upload a new image to replace the current one (optional).
                                </small>
                            </div>

                            <!-- Secondary Images -->
                            <h5 class="section-title text-primary mb-3 border-bottom pb-2 mt-4">
                                Secondary Images
                            </h5>

                            @if (Model.Images != null && Model.Images.Count > 0)
                            {
                                <p class="text-muted">
                                    Currently there are @Model.Images.Count secondary images stored.
                                </p>
                            }
                            else
                            {
                                <p class="text-muted">
                                    No secondary images uploaded yet.
                                </p>
                            }

                            <input type="file"
                                   name="Images"
                                   class="form-control"
                                   accept="image/*"
                                   multiple />
                            <small class="text-muted">
                                Choose one or more images to replace all existing secondary images (optional).
                            </small>

                            <!-- Tour Plans (Itinerary) -->
                            <h5 class="section-title text-primary mb-3 border-bottom pb-2 mt-4">
                                Itinerary (Tour Plans)
                            </h5>

                            <div id="tourplans-container">
                                @if (Model.TourPlans != null && Model.TourPlans.Count > 0)
                                {
                                    for (int i = 0; i < Model.TourPlans.Count; i++)
                                    {
                                        <div class="border rounded p-3 mb-3 bg-light tour-plan-item">

                                            <input type="hidden" asp-for="TourPlans[i].Id" />

                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <strong>Plan @(i + 1)</strong>

                                                <button type="button"
                                                        class="btn btn-sm btn-danger btn-remove-plan">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>

                                            <div class="mb-2">
                                                <label class="form-label">Title</label>
                                                <input asp-for="TourPlans[i].Heading" class="form-control" />
                                            </div>

                                            <div>
                                                <label class="form-label">Description</label>
                                                <textarea asp-for="TourPlans[i].Description"
                                                          class="form-control"
                                                          rows="3"></textarea>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>

                            <button type="button"
                                    class="btn btn-outline-primary mt-2"
                                    id="btn-add-plan">
                                <i class="bi bi-plus-circle"></i> Add New Plan
                            </button>

                            <!-- Actions -->
                            <div class="d-flex justify-content-between align-items-center mt-5 allowed-for-tourguide">
                                <a asp-controller="TourGuide"
                                   asp-action="TourGuideDashboard"
                                   class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-arrow-left"></i> Back
                                </a>

                                <button type="submit"
                                        class="btn btn-warning btn-lg">
                                    <i class="bi bi-save"></i> Update Trip
                                </button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const container = document.getElementById("tourplans-container");
            const addBtn = document.getElementById("btn-add-plan");

            // Safety check: if not found, do nothing
            if (!container || !addBtn) {
                return;
            }

            // Initial index: how many tour plans exist from the server
            let planIndex = @(Model.TourPlans != null ? Model.TourPlans.Count : 0);

            // ADD PLAN
            addBtn.addEventListener("click", function () {

                const html = `
        <div class="border rounded p-3 mb-3 bg-light tour-plan-item">
            <input type="hidden" name="TourPlans[${planIndex}].Id" value="0" />

            <div class="d-flex justify-content-between align-items-center mb-2">
                <strong>New Plan</strong>
                <button type="button" class="btn btn-sm btn-danger btn-remove-plan">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>

            <div class="mb-2">
                <label class="form-label">Title</label>
                <input name="TourPlans[${planIndex}].Heading" class="form-control" />
            </div>

            <div>
                <label class="form-label">Description</label>
                <textarea name="TourPlans[${planIndex}].Description"
                          class="form-control"
                          rows="3"></textarea>
            </div>
        </div>`;

                container.insertAdjacentHTML("beforeend", html);
                planIndex++;
            });

            // DELETE PLAN (event delegation)
            container.addEventListener("click", function (e) {
                if (e.target.closest(".btn-remove-plan")) {
                    const item = e.target.closest(".tour-plan-item");
                    if (item) {
                        item.remove();
                    }
                }
            });

        });
    </script>
}

