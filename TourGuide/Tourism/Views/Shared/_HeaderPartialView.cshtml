<div id="cartModal" class="cart-modal hidden">
    <div class="cart-overlay"></div>

    <div class="cart-box">
        <button id="closeCart" class="close-cart">&times;</button>

        <h2>Your Cart</h2>

        <div id="cartItemContainer">
            <!-- هيتم ملؤه من JS -->
        </div>

        <hr />

        <div class="cart-footer">
            <span class="cart-total-label">
                Total: $<span id="cartTotal">0.00</span>
            </span>

            <div class="cart-actions">
                <button id="clearCart" class="btn btn-outline-warning">
                    Clear Cart
                </button>
                <button id="cartNext" class="btn btn-warning">
                    Next
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .cart-modal.hidden {
        display: none;
    }

    .cart-modal {
        position: fixed;
        inset: 0;
        z-index: 9999;
    }

    .cart-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,.4);
    }

    .cart-box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        border-radius: 16px;
        padding: 24px 32px;
        width: 480px;
        max-width: 95%;
        box-shadow: 0 12px 40px rgba(0,0,0,.25);
    }

    .close-cart {
        position: absolute;
        top: 10px;
        right: 16px;
        border: none;
        background: transparent;
        font-size: 24px;
        cursor: pointer;
    }

    .cart-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 16px;
    }

    .cart-item {
        display: flex;
        gap: 16px;
        align-items: center;
        margin-top: 16px;
    }

        .cart-item img {
            width: 80px;
            height: 80px;
            border-radius: 12px;
            object-fit: cover;
        }

    .cart-qty-controls {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-left: auto;
    }

    .cart-qty-btn {
        width: 26px;
        height: 26px;
        border-radius: 50%;
        border: none;
        cursor: pointer;
    }
</style>

<script>
    document.addEventListener("click", function (e) {

        if (e.target && e.target.id === "cartNext") {

            const items = [];

            document.querySelectorAll("#cartItemContainer .cart-item").forEach(item => {
                items.push({
                    TripId: parseInt(item.dataset.tripId),
                    Quantity: parseInt(item.querySelector(".cart-qty").value),
                    Cost: parseFloat(item.querySelector(".cart-price").dataset.unitPrice)
                });
            });

            if (items.length === 0) {
                alert("Cart is empty");
                return;
            }

            fetch('/TourPackages/SaveCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(items)
            })
            .then(res => {
                if (res.ok) {
                    alert("Cart saved successfully ✅");
                } else {
                    alert("Error saving cart ❌");
                }
            });

        }
    });
</script>
