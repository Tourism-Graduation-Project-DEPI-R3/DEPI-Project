<!-- ==============================================================================================
     TOAST NOTIFICATION LOGIC
     ============================================================================================== -->
@if (TempData["ToastMessage"] != null)
{
    <div class="toast-wrapper">
        <div class="custom-toast show" id="authToast">
            <div class="toast-content">
                <div class="icon-box">
                    <i class="fa-solid fa-circle-info"></i>
                </div>
                <div class="message-box">
                    @if (TempData["ToastMessage"].ToString().Length > 1)
                    {
                        @Html.Raw(TempData["ToastMessage"])
                    }
                    else
                    {
                        <span>Please <strong>create an account</strong> or <strong>log in</strong> to unlock full access.</span>
                    }
                </div>
                <button onclick="closeToast()" class="close-btn"><i class="fa-solid fa-xmark"></i></button>
            </div>
            <div class="progress-bar-toast"></div>
        </div>
    </div>
}

<!-- ==============================================================================================
     HERO VIDEO SECTION (NEW ADDITION)
     ============================================================================================== -->
