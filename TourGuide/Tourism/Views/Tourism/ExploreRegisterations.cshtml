@{
    ViewData["Title"] = "Register Selection";
}
<div class="register-selection">
    <h1>Registration</h1>
    <p>Please choose how you want to register:</p>

    <div class="selection-container">
        <!-- Tourist -->
        <div class="selection-card">
            <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=1920&q=80" alt="Tourist">
            <div class="selection-content">
                <h3>Register as Tourist</h3>
                <p>Join our community to explore amazing destinations and book unforgettable trips easily.</p>
                <a href="@Url.Action("TouristRegister", "Tourism")" class="select-btn">Select</a>
            </div>
        </div>

        <!-- Hotel Provider -->
        <div class="selection-card">
            <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=1920&q=80" alt="Hotel Provider">
            <div class="selection-content">
                <h3>Register as Hotel Provider</h3>
                <p>If you manage hotels or accommodations, join us to showcase your properties to travelers worldwide.</p>
                <a href="@Url.Action("HotelRegister", "Tourism")" class="select-btn">Select</a>
            </div>
        </div>

        <!-- Merchant Training -->
        <div class="selection-card">
            <img src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=1920&q=80" alt="Merchant">
            <div class="selection-content">
                <h3>Register as Merchant</h3>
                <p>Join our merchant training program to sell travel products, souvenirs, and unique local goods worldwide.</p>
                <a href="@Url.Action("SignUp", "Merchant")" class="select-btn">Select</a>
            </div>
        </div>

        <!-- Tour Guide -->
        <div class="selection-card">
            <img src="https://images.unsplash.com/photo-1526772662000-3f88f10405ff?auto=format&fit=crop&w=1920&q=80" alt="Tour Guide">
            <div class="selection-content">
                <h3>Register as Tour Guide</h3>
                <p>Guide travelers and share your expertise about local culture, history, and hidden gems.</p>
                <a href="@Url.Action("TourGuideRegister", "TourGuide")" class="select-btn">Select</a>
            </div>
        </div>
    </div>
</div>


<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5f7fa;
        margin: 0;
        padding: 0;
    }

    .register-selection {
        text-align: center;
        padding: 60px 20px;
    }

        .register-selection h1 {
            font-size: 3rem;
            font-weight: 800;
            color: #1f2937;
            margin-top: -70px;
            margin-bottom: 5px;
        }

        .register-selection p {
            color: #4b5563;
            font-size: 1.3rem;
            margin-bottom: 40px;
        }

    .selection-container {
        display: flex;
        justify-content: center;
        align-items: stretch;
        flex-wrap: nowrap;
        gap: 25px;
        padding: 0 20px;
    }

    .selection-card {
        background: #fff;
        flex: 1 1 22%;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .selection-card:hover {
            transform: scale(1.12);
            box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        }

        .selection-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

    .selection-content {
        padding: 20px;
        text-align: left;
        flex-grow: 1; /* يخلي المحتوى ياخد المساحة المتبقية */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .selection-content h3 {
            font-size: 1.3rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 10px;
        }

        .selection-content p {
            color: #4b5563;
            font-size: 0.95rem;
            line-height: 1.4;
            margin-bottom: 20px;
            flex-grow: 1;
        }

    .select-btn {
        display: inline-block;
        text-decoration: none;
        background-color: #4f46e5;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
        text-align: center;
    }

        .select-btn:hover {
            background-color: #000;
        }

</style>