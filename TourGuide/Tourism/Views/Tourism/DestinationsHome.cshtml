@{
    ViewData["Title"] = "DestinationsHome";
}

<div class="container-fluid p-0 m-0 position-relative" style="width: 100vw; height: 70vh; overflow-x: hidden;">
    <div class="row g-0 m-0 p-0" style="height: 100%;">

        <!-- Left Section -->
        <div class="col-md-4 d-flex align-items-center justify-content-center text-white p-0 m-0"
             style="background-color:#2596be; height: 100%;">
            <div class="text-start ps-4">
                <h1 class="fw-bold" style="font-size: 4.5rem; line-height: 1.3;">
                    Find Your <br /> Dream <br />Destination
                </h1>
            </div>
        </div>

        <!-- Right Section -->
        <div class="col-md-8 d-flex p-0 m-0" style="height: 100%;">
            <div class="d-flex flex-grow-1 w-100 justify-content-between" style="gap: 10px; padding: 10px;">

                <!-- Card 1 -->
                <div class="position-relative flex-fill image-card">
                    <img src="@Url.Content("~/images/Destination/1.jpeg")" class="w-100 h-100 rounded" style="object-fit: cover;">

                    <p class="caption position-absolute bottom-0 start-0 fw-bold p-3 text-uppercase">
                        <a href="@Url.Action("TheNile", "Tourism")" class="text-white text-decoration-none">
                            The Nile
                        </a>
                    </p>

                    <div class="overlay position-absolute top-0 start-0 w-100 h-100 rounded"></div>
                </div>

                <!-- Card 2 -->
                <div class="position-relative flex-fill image-card">
                    <img src="@Url.Content("~/images/Destination/2.jpeg")" class="w-100 h-100 rounded" style="object-fit: cover;">

                    <p class="caption position-absolute bottom-0 start-0 fw-bold p-3 text-uppercase">
                        <a href="@Url.Action("TheRedSea", "Tourism")" class="text-white text-decoration-none">
                            The Red Sea
                        </a>
                    </p>

                    <div class="overlay position-absolute top-0 start-0 w-100 h-100"></div>
                </div>

                <!-- Card 3 -->
                <div class="position-relative flex-fill image-card">
                    <img src="@Url.Content("~/images/Destination/3.jpeg")" class="w-100 h-100 rounded" style="object-fit: cover;">

                    <p class="caption position-absolute bottom-0 start-0 fw-bold p-3 text-uppercase">
                        <a href="@Url.Action("TheMedSea", "Tourism")" class="text-white text-decoration-none">
                            The Med Sea
                        </a>
                    </p>

                    <div class="overlay position-absolute top-0 start-0 w-100 h-100 rounded"></div>
                </div>

                <!-- Card 4 -->
                <div class="position-relative flex-fill image-card">
                    <img src="@Url.Content("~/images/Destination/4.jpeg")" class="w-100 h-100 rounded" style="object-fit: cover;">

                    <p class="caption position-absolute bottom-0 start-0 fw-bold p-3 m-2 text-uppercase">
                        <a href="@Url.Action("DesertsOases", "Tourism")" class="text-white text-decoration-none">
                            Deserts & Oases
                        </a>
                    </p>

                    <div class="overlay position-absolute top-0 start-0 w-100 h-100 rounded"></div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0 !important;
        padding: 0 !important;
        overflow-x: hidden;
        width: 100%;
    }

    main, .container, .container-fluid {
        margin: 0 !important;
        padding: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
    }

    .overlay {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        z-index: 1;
        position: absolute;
        top: 0;
        left: 0;
    }

    .caption {
        color: white;
        font-size: 20px;
        cursor: pointer;
        z-index: 2;
        position: absolute;
        transition: transform 0.3s ease, font-size 0.3s ease;
    }

        .caption a {
            display: inline-block;
            transition: transform 0.2s ease, letter-spacing 0.2s ease;
            transform-origin: center;
        }

            .caption a:hover {
                transform: scale(1.2);
                letter-spacing: 0.1px;
            }

</style>
