@model Tourism.ViewModel.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <!-- ✅ Header -->
    <header style="width: 100%; position: relative; top: 0; left: 0; z-index: 1000;">
        @Html.Partial("_HeaderPartialView")
    </header>

    <!-- ✅ Login Page -->
    <div class="container">
        <div class="left">
            <div>
                <h2>Discover Your Next Adventure</h2>
                <p>Sign in to unlock exclusive deals and personalized travel plans.</p>
            </div>
        </div>

        <div class="right">
            <h4>Travling!</h4>
            <h1>Welcome Back</h1>
            <p>Please enter your details to sign in.</p>

            @using (Html.BeginForm("Login", "Tourism", FormMethod.Post))
            {
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>

                <div class="input-group">
                    <label asp-for="email"></label>
                    @Html.TextBoxFor(m => m.email, new { @class = "input", placeholder = "Enter your username" })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                </div>

                <div class="input-group">
                    <label asp-for="passwordHash"></label>
                    @Html.PasswordFor(m => m.passwordHash, new { @class = "input", placeholder = "Enter your password" })
                    @Html.ValidationMessageFor(m => m.passwordHash, "", new { @class = "text-danger" })
                </div>

                @* <div class="remember">
                    <label><input type="checkbox" asp-for="RemmberMe" /> Remember me</label>
                    <a href="#">Forgot password?</a>
                </div> *@

                <button type="submit" class="btn">SIGN IN</button>
            }

            <div class="or">or sign in with</div>

            <a href="#" class="social-btn google">Sign in with Google</a>
            <a href="#" class="social-btn facebook">Sign in with Facebook</a>

            <div class="footer">
                <p>Don't have an account? <a asp-action="ExploreRegisterations" asp-controller="Tourism">Sign Up</a></p>
            </div>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: #f2f5f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background: #fff;
            width: 1050px;
            border-radius: 16px;
            overflow: hidden;
            display: flex;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.1);
            margin-top: -5px;
        }

        .left {
            width: 50%;
            background: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e') center/cover;
            display: flex;
            align-items: flex-end;
            padding: 40px;
            color: #fff;
        }

            .left h2 {
                font-size: 28px;
                font-weight: 600;
            }

            .left p {
                margin-top: 8px;
                font-size: 16px;
                color: #e4e4e4;
            }

        .right {
            width: 50%;
            padding: 10px 50px 20px 50px;
        }

            .right h4 {
                font-size: 16px;
                color: #14aaf5;
                margin-bottom: 8px;
                font-weight: 600;
            }

            .right h1 {
                font-size: 24px;
                margin-bottom: 6px;
                font-weight: 700;
                color: #222;
            }

            .right p {
                color: #777;
                font-size: 18px;
                margin-bottom: 25px;
            }

        .input-group {
            margin-bottom: 18px;
        }

        label {
            font-size: 18px;
            font-weight: 700;
            color: #333;
            margin-bottom: 4px;
            display: block;
        }

        .input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
            outline: none;
            transition: .3s;
        }

            .input:focus {
                border-color: #14aaf5;
            }

        .remember {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
            margin-bottom: 20px;
        }

            .remember a {
                color: #14aaf5;
                text-decoration: none;
            }

        .btn {
            width: 100%;
            background: #14aaf5;
            color: #fff;
            border: none;
            padding: 13px;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn:hover {
                background: #0c8ac4;
            }

        .or {
            text-align: center;
            margin: 15px 0;
            font-size: 14px;
            color: #888;
        }

        .social-btn {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            display: block;
            text-align: center;
            margin-bottom: 12px;
            transition: 0.3s;
            text-decoration: none;
            color: #fff;
            font-weight: 600;
        }

            .social-btn.google {
                background-color: #DB4437;
                border: none;
            }

                .social-btn.google:hover {
                    background-color: #a5271d;
                }

            .social-btn.facebook {
                background-color: #1877F2;
                border: none;
            }

                .social-btn.facebook:hover {
                    background-color: #0f4bb5;
                }

        .footer {
            text-align: center;
            font-size: 14px;
            margin-top: 20px;
        }

            .footer a {
                color: #14aaf5;
                text-decoration: none;
                font-weight: 600;
            }

        .text-danger {
            color: red;
            font-size: 13px;
            margin-bottom: 10px;
        }
    </style>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
