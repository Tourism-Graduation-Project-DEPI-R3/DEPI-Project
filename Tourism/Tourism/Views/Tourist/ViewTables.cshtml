@model IEnumerable<Tourism.ViewModel.TableViewModel>
@{
    Layout = "RestaurantLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Tables</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #6b21a8;
            --primary-light: #8b5cf6;
            --primary-bright: #a78bfa;
            --secondary-color: #ec4899;
            --dark-bg: #ffffff;
            --text-color: #2d3436;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
        }

        /* Page Header Section */
        .page-header {
            background: linear-gradient(135deg, #6b21a8 0%, #8b5cf6 100%);
            padding: 2.5rem 0;
            margin-bottom: 2rem;
            box-shadow: 0 4px 15px rgba(107, 33, 168, 0.15);
        }

        .page-title {
            color: white;
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        /* Back Button */
        .back-btn {
            border: 2px solid white;
            color: white;
            background-color: transparent;
            padding: 10px 24px;
            border-radius: 12px;
            text-decoration: none;
            transition: all .3s ease;
            font-weight: 600;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .back-btn:hover {
                background-color: white;
                color: var(--primary-color);
            }

        /* Table Cards */
        .table-card {
            border-radius: 20px;
            background: white;
            transition: transform .3s ease, box-shadow .3s ease, border-color .3s ease;
            border: 2px solid #f3f4f6;
            cursor: pointer;
            margin-bottom: 20px;
            overflow: hidden;
            position: relative;
            min-height: 220px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .table-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(107, 33, 168, 0.15);
                border-color: var(--primary-color);
            }

        /* Table Icon */
        .table-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 2.5rem;
            color: rgba(107, 33, 168, 0.1);
        }

        .info-title {
            font-size: 1.6rem;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 0.5rem;
        }

        .info-text {
            font-size: 1.05rem;
            color: #6b7280;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .info-badge {
            background: linear-gradient(135deg, rgba(107, 33, 168, 0.1), rgba(139, 92, 246, 0.1));
            color: var(--primary-color);
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.95rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .price-tag {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-color);
            margin: 1rem 0;
        }

        /* Book Button (Now an Anchor Tag) */
        .book-link {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            border: none;
            font-weight: 600;
            border-radius: 12px;
            padding: 12px 24px;
            transition: all .3s ease;
            text-decoration: none;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 1.05rem;
        }

            .book-link:hover {
                background: linear-gradient(135deg, #581c87, var(--primary-color));
                color: white;
                transform: scale(1.02);
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

            .empty-state i {
                font-size: 4rem;
                color: #d1d5db;
                margin-bottom: 1rem;
            }

            .empty-state h3 {
                color: #6b7280;
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .empty-state p {
                color: #9ca3af;
            }

        /* Container Styling */
        .tables-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        /* Bottom Action Bar */
        .bottom-action {
            position: sticky;
            bottom: 20px;
            text-align: center;
            margin-top: 3rem;
            z-index: 100;
        }

        .bottom-back-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            border: none;
            padding: 14px 32px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 8px 25px rgba(107, 33, 168, 0.3);
            transition: all 0.3s ease;
        }

            .bottom-back-btn:hover {
                background: linear-gradient(135deg, #581c87, var(--primary-color));
                color: white;
                transform: translateY(-3px);
                box-shadow: 0 12px 35px rgba(107, 33, 168, 0.4);
            }

        @@media (max-width: 768px) {
            .page-header

        {
            padding: 1.5rem 0;
        }

        .page-title {
            font-size: 1.8rem;
        }

        .header-actions {
            flex-direction: column;
            width: 100%;
        }

        .back-btn {
            width: 100%;
            justify-content: center;
        }

        .table-card {
            min-height: 200px;
        }

        }
    </style>
</head>

<body>

    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <h1 class="page-title">
                    <i class="fas fa-chair"></i>
                    Available Tables
                </h1>
                <div class="header-actions">
                  
                </div>
            </div>
        </div>
    </div>

    <div class="tables-container">
        <div class="row g-4">

            @if (Model == null || !Model.Any())
            {
                <div class="col-12">
                    <div class="empty-state">
                        <i class="fas fa-chair"></i>
                        <h3>No Available Tables</h3>
                        <p>All tables are currently unavailable.</p>
                    </div>
                </div>
            }
            else
            {
                foreach (var t in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="table-card p-4 shadow-sm">

                            <i class="fas fa-chair table-icon"></i>

                            <div class="info-title">Table #@t.number</div>

                            <div class="info-badge">
                                <i class="fas fa-users"></i>
                                @t.numberOfPersons Persons
                            </div>

                            <div class="price-tag">
                                $@t.bookingPrice
                            </div>

                            <a class="book-link"
                               asp-action="BookTable"
                               asp-controller="Tourist"
                               asp-route-tableId="@t.id">
                                <i class="fas fa-calendar-check"></i>
                                Book Now
                            </a>

                        </div>
                    </div>
                }
            }

        </div>

        @if (Model != null && Model.Any())
        {
            <div class="bottom-action">
                <a class="bottom-back-btn" asp-action="ViewMenu" asp-controller="Tourist" asp-route-restaurantId="@ViewBag.RestaurantId">
                    <i class="fas fa-arrow-left"></i>
                    Back to Menu
                </a>
            </div>
        }
    </div>

</body>
</html>