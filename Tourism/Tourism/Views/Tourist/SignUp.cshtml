@model Tourism.Models.Tourist

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - Tourism</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            /* Consistent Purple Theme */
            --primary-color: #6b21a8; /* Dark Purple */
            --primary-light: #8b5cf6; /* Light Purple */
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            /* Applied light gradient background */
            background: linear-gradient(135deg, var(--dark-bg), #ffffff);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: flex-start; /* Start from top */
            justify-content: center;
            padding: 60px 20px; /* Added top padding */
        }

        .signup-container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
            border: 1px solid rgba(107, 33, 168, 0.1);
            max-width: 650px;
            width: 100%;
            padding: 40px;
        }

        .signup-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .signup-header h1 {
                color: var(--primary-color);
                font-weight: 700;
                font-size: 2.2rem;
                margin-bottom: 5px;
            }

            .signup-header p {
                color: #6c757d;
                font-size: 1rem;
            }

        .form-label {
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 5px;
        }

        .form-control, .form-select {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-light);
                box-shadow: 0 0 0 0.25rem rgba(107, 33, 168, 0.25);
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
        }

        /* Sign Up Button Styling */
        .btn-signup {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            margin-top: 25px;
            transition: all 0.3s;
        }

            .btn-signup:hover {
                background: linear-gradient(135deg, #581c87, var(--primary-color));
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(107, 33, 168, 0.4) !important;
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            color: #666;
        }

            .login-link a {
                color: var(--primary-color);
                font-weight: 600;
                text-decoration: none;
            }

                .login-link a:hover {
                    color: var(--primary-light);
                    text-decoration: underline;
                }

        .section-title {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.4rem;
            margin-top: 30px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(107, 33, 168, 0.1);
        }

        .required-field::after {
            content: " *";
            color: red;
        }

        .validation-summary {
            background-color: #f8d7da;
            color: #842029;
            border: 1px solid #f5c6cb;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="signup-header">
            <h1>Create Your Tourist Account</h1>
            <p>Join us for an amazing tourism experience</p>
        </div>

        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="SignUp" method="post">
            <h3 class="section-title"><i class="bi bi-person-fill me-2"></i>Personal Information</h3>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="firstName" class="form-label required-field">First Name</label>
                    <input asp-for="firstName" class="form-control" placeholder="Enter your first name" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label required-field">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="age" class="form-label required-field">Age</label>
                    <input asp-for="age" type="number" class="form-control" placeholder="Age" min="1" max="120" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="gender" class="form-label required-field">Gender</label>
                    <select asp-for="gender" class="form-select">
                        <option value="">Select gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="nationality" class="form-label required-field">Nationality</label>
                    <input asp-for="nationality" class="form-control" placeholder="e.g., American" />
                    <span asp-validation-for="nationality" class="text-danger"></span>
                </div>
            </div>

            <h3 class="section-title"><i class="bi bi-geo-alt-fill me-2"></i>Contact Information</h3>

            <div class="mb-3">
                <label asp-for="email" class="form-label required-field">Email Address</label>
                <input asp-for="email" type="email" class="form-control" placeholder="example@email.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="phoneNumber" class="form-label required-field">Phone Number</label>
                    <input asp-for="phoneNumber" type="tel" class="form-control" placeholder="+1234567890" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="address" class="form-label required-field">Address</label>
                    <input asp-for="address" class="form-control" placeholder="Enter your address" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
            </div>

            <h3 class="section-title"><i class="bi bi-shield-lock-fill me-2"></i>Account Security</h3>

            <div class="mb-3">
                <label asp-for="passwordHash" class="form-label required-field">Password</label>
                <input asp-for="passwordHash" id="passwordHash" type="password" class="form-control" placeholder="Enter password (min 6 characters)" />
                <span asp-validation-for="passwordHash" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label required-field">Confirm Password</label>
                <input id="confirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                <span id="passwordMatchError" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-signup shadow-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Sign Up
            </button>

            <div class="login-link">
                Already have an account? <a asp-action="Login">Login here</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            const pass = document.getElementById("passwordHash").value;
            const confirm = document.getElementById("confirmPassword").value;
            const errorElement = document.getElementById("passwordMatchError");

            // Prevent form submission if client-side validation for passwords fails
            if (pass !== confirm) {
                e.preventDefault();
                errorElement.textContent = "Passwords do not match!";
            } else {
                errorElement.textContent = "";
            }
        });
    </script>
</body>
</html>