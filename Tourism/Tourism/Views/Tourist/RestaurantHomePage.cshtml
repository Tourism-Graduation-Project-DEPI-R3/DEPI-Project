@model IEnumerable<Tourism.ViewModel.RestaurantHomePageViewModel>
@{
    Layout = "RestaurantLayout";
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gourmet | Restaurants</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #6b21a8; /* Purple */
            --primary-light: #8b5cf6;
            --primary-bright: #a78bfa;
            --secondary-color: #ec4899;
            --dark-bg: #ffffff;
            --text-color: #2d3436;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            height: 450px;
            overflow: hidden;
            margin-bottom: 3rem;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=1200') center/cover;
            /* Added a subtle dark gradient overlay for better contrast */
            background-blend-mode: multiply;
            background-color: rgba(0, 0, 0, 0.4);
            opacity: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 2rem;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            /* ENHANCED HIGHLIGHT: Stronger shadow for better pop */
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), /* Soft white glow */
            0 4px 15px rgba(0, 0, 0, 0.7); /* Deep black base shadow */
            animation: fadeInUp 0.8s ease-out;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 300;
            max-width: 600px;
            /* ENHANCED HIGHLIGHT: Stronger shadow for better pop */
            text-shadow: 0 0 8px rgba(255, 255, 255, 0.7), /* Soft white glow */
            1px 2px 8px rgba(0, 0, 0, 0.6); /* Deep black base shadow */
            animation: fadeInUp 0.8s ease-out 0.2s backwards;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Cards */
        .restaurant-card {
            border-radius: 20px;
            background: white;
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
            border: 2px solid #f3f4f6;
            cursor: pointer;
            margin-bottom: 20px;
            overflow: hidden;
        }

            .restaurant-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(107, 33, 168, 0.15);
                border-color: var(--primary-color);
            }

        .res-img {
            width: 160px;
            height: 120px;
            object-fit: cover;
            border-radius: 12px;
            transition: .3s ease;
        }

        .restaurant-card:hover .res-img {
            transform: scale(1.05);
        }

        .res-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-color);
        }

        .res-desc {
            font-size: 0.95rem;
            color: #555;
        }

        .view-btn {
            transition: .3s ease;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            border: none;
            padding: 10px 24px;
            border-radius: 12px;
            font-weight: 600;
        }

            .view-btn:hover {
                background: linear-gradient(135deg, #581c87, var(--primary-color));
                color: white;
                transform: scale(1.05);
            }
    </style>

</head>
<body>

    <div class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1 class="hero-title">Discover Culinary Excellence</h1>
            <p class="hero-subtitle">Explore the finest restaurants and book your perfect dining experience</p>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row g-3">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning text-center w-100 mt-4" style="background-color: transparent; color:dimgrey; border: none;">
                    No restaurants available at the moment.
                </div>
            }
            else
            {
                @foreach (var r in Model ?? Enumerable.Empty<Tourism.ViewModel.RestaurantHomePageViewModel>())
                {
                    <div class="col-12">
                        <div class="restaurant-card d-flex align-items-center p-3 shadow-sm">
                            <img src="@(r.Image != null ? "data:image/jpeg;base64," + Convert.ToBase64String(r.Image) : "/images/default-restaurant.png")" class="res-img me-3" />

                            <div class="flex-grow-1">
                                <div class="res-name">@r.name</div>
                                <div class="res-desc">@r.description</div>
                            </div>

                            <div class="flex-grow-1 d-none d-md-block">
                                <div class="res-name"><label>Address</label></div>
                                <div class="res-desc">@r.address</div>
                            </div>

                            <div class="flex-grow-1 d-none d-lg-block">
                                <div class="res-name"><label>HotLine</label></div>
                                <div class="res-desc">@r.hotline</div>
                            </div>

                            <div>
                                <a asp-action="ViewMenu" asp-controller="Tourist" asp-route-restaurantId="@r.id" class="btn view-btn ms-3">View Menu</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script>
        document.getElementById("searchForm").addEventListener("submit", function (e) {
            e.preventDefault();

            let query = document.getElementById("searchInput").value;

            fetch(`/Tourist/ShowRestaurantssBySearch?Search=${encodeURIComponent(query)}`)
                .then(response => response.text())
                .then(html => {
                    document.querySelector(".container .row").innerHTML = html;
                })
                .catch(err => console.error(err));
        });
    </script>

</body>
</html>