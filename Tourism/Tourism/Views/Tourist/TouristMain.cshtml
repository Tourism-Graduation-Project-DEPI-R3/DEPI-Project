@{
    Layout = "TouristLayout";
}
@using System.Security.Claims
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tourism - Tourist Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
            margin-left: 0 !important;
            display: flex;
            flex-direction: column;
        }

        /* MAIN CONTENT MODIFIED */
        .main-content {
            margin-left: 0 !important;
            padding: 0 0 2rem 0; /* REMOVED TOP PADDING */
            flex: 1;
            transition: all 0.3s ease;
        }

            /* EXPANDED class to match layout behavior */
            .main-content.expanded {
                margin-left: 0 !important;
            }

        /* --- HERO SECTION STYLES --- */
        .hero-section {
            position: relative;
            height: 350px;
            overflow: hidden;
            margin-bottom: 3rem;
            /* Ensures it spans full width of its parent */
            width: 100%;
        }

        /* Adjusted for image tag use */
        .hero-image {
            position: absolute;
            inset: 0;
            z-index: 1;
        }

            .hero-image img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensures the image covers the area */
            }

        .hero-overlay {
            position: absolute;
            inset: 0;
            /* Dark gradient overlay for text contrast */
           
            z-index: 2;
        }

        .hero-content {
            position: relative;
            z-index: 3;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding: 0 4rem;
            color: white;
            max-width: 100%;
            box-sizing: border-box;
        }

            .hero-content h1 {
                font-size: 3.5rem;
                font-weight: 900;
                margin-bottom: 0.5rem;
                /* HIGHLIGHTED FONT STYLE */
                text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 4px 15px rgba(0, 0, 0, 0.7);
            }

            .hero-content p {
                font-size: 1.5rem;
                font-weight: 400;
                opacity: 1;
                /* HIGHLIGHTED FONT STYLE */
                text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.8);
            }
        /* --- END HERO SECTION STYLES --- */

        /* INFO SECTIONS - Retaining interior horizontal padding */
        .info-section {
            display: flex;
            gap: 2rem;
            margin-bottom: 3rem;
            align-items: center;
            padding: 0 2rem;
        }

            .info-section:nth-child(even) {
                flex-direction: row-reverse;
            }

        .info-content {
            flex: 1;
        }

            .info-content h2 {
                color: #6b21a8;
                font-size: 2rem;
                margin-bottom: 1rem;
            }

            .info-content p {
                color: #4b5563;
                font-size: 1.1rem;
                line-height: 1.8;
            }

        .info-image {
            flex: 1;
        }

            .info-image img {
                width: 100%;
                height: 300px;
                object-fit: cover;
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        /* EXPLORE SECTION - Retaining interior horizontal padding */
        .explore-section {
            margin: 4rem 0 2rem;
            padding: 0 2rem;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            color: #6b21a8;
            margin-bottom: 2rem;
        }

        .explore-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .explore-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid #e5e7eb;
            text-decoration: none;
            color: inherit;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

            .explore-card:hover {
                transform: translateY(-10px);
                border-color: #6b21a8;
                box-shadow: 0 20px 40px rgba(107, 33, 168, 0.15);
            }

        .explore-icon {
            width: 70px;
            height: 70px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, #6b21a8 0%, #8b5cf6 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #ffffff;
            transition: all 0.3s ease;
        }

        .explore-card:hover .explore-icon {
            transform: scale(1.1);
        }

        .explore-card h3 {
            font-size: 1.5rem;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .explore-card p {
            color: #6b7280;
            font-size: 0.95rem;
        }

        /* Media query for smaller screens to adjust padding */
        @@media (max-width: 768px) {
            .hero-content {
                padding: 0 2rem;
            }

            .info-section, .explore-section {
                padding: 0 1rem;
                flex-direction: column;
            }

                .info-section:nth-child(even) {
                    flex-direction: column; /* Resetting row-reverse on mobile */
                }
        }
    </style>
</head>

<body>

    <main class="main-content expanded">

        <div class="hero-section">
            <div class="hero-image">
                <img src="~/pics/david-vives-ELf8M_YWRTY-unsplash.jpg"
                     alt="Cover photo of a scenic travel destination with mountains and a lake">
            </div>
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <h1>Welcome Back, @User.FindFirst(ClaimTypes.Name)?.Value!</h1>
                <p>Start planning your next great adventure right here.</p>
            </div>
        </div>

        <div class="info-section">
            <div class="info-content">
                <h2>Premier Hotel Bookings</h2>
                <p>Explore a curated selection of accommodations, from luxury resorts to budget-friendly stays. Our seamless booking system ensures you find and secure your perfect rest, tailored to your travel needs and preferences.</p>
            </div>
            <div class="info-image">
                <img src="~/pics/bilderboken-rlwE8f8anOc-unsplash.jpg" alt="A hotel room or building exterior.">
            </div>
        </div>

        <div class="info-section">
            <div class="info-content">
                <h2>Reserve Culinary Experiences</h2>
                <p>Discover the finest local and international restaurants. Easily browse menus, check availability, and instantly book tables, ensuring you savor the best gastronomic delights your destination has to offer.</p>
            </div>
            <div class="info-image">
                <img src="~/pics/zakaria-zayane-0uAVsDcyD0M-unsplash.jpg" alt="A professional restaurant interior or dish.">
            </div>
        </div>

        <div class="info-section">
            <div class="info-content">
                <h2>Curated Local Marketplace</h2>
                <p>Explore our exclusive online store for authentic local products, unique souvenirs, and all your travel essentials. Support local businesses while finding everything you need for your trip.</p>
            </div>
            <div class="info-image">
                <img src="~/pics/lucrezia-carnelos-wQ9VuP_Njr4-unsplash.jpg" alt="A shopping street or product display.">
            </div>
        </div>

        <div class="info-section">
            <div class="info-content">
                <h2>Effortless Destination Navigation</h2>
                <p>Utilize integrated mapping and location services to navigate new surroundings with confidence. Get directions, identify points of interest, and plan your routes efficiently to maximize your exploration time.</p>
            </div>
            <div class="info-image">
                <img src="~/pics/michael-rodock-ZsDl4gM69Ms-unsplash.jpg" alt="A map or navigation graphic on a phone.">
            </div>
        </div>

        <section class="explore-section">
            <h2 class="section-title">Let's Explore</h2>

            <div class="explore-cards">
                <a href="/tourist/EcommerceHomePage" class="explore-card">
                    <div class="explore-icon"><i class="fas fa-shopping-bag"></i></div>
                    <h3>Store</h3>
                    <p>Shop local products and souvenirs</p>
                </a>

                <a href="/tourist/showrestaurants" class="explore-card">
                    <div class="explore-icon"><i class="fas fa-utensils"></i></div>
                    <h3>Restaurants</h3>
                    <p>Discover and book dining experiences</p>
                </a>

                <a href="/tourist/showallhotels" class="explore-card">
                    <div class="explore-icon"><i class="fas fa-bed"></i></div>
                    <h3>Hotels</h3>
                    <p>Find and reserve accommodations</p>
                </a>

                <a href="/destinations/index" class="explore-card">
                    <div class="explore-icon"><i class="fas fa-map-marked-alt"></i></div>
                    <h3>Explore Navigation</h3>
                    <p>Navigate and discover destinations</p>
                </a>
            </div>

        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>