@using Tourism.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Restaurant Login";
    Layout = null; // Ensure this is styled as a standalone page if it's not using a main layout
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    :root {
        /* Updated to Purple Theme */
        --primary-color: #6b21a8; /* Dark Purple */
        --primary-light: #8b5cf6; /* Light Purple for buttons/hover */
        --dark-bg: #f7f9fc;
    }

    /* Gradient Background for the whole page */
    .vh-100 {
        background: linear-gradient(135deg, var(--dark-bg), #ffffff);
    }

    /* Card Styling */
    .card {
        border: 1px solid rgba(107, 33, 168, 0.1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
        background-color: #ffffff;
    }

    /* Primary Text/Title Color */
    .text-primary {
        color: var(--primary-color) !important;
    }

    /* Login Button Styling */
    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #581c87, var(--primary-color));
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(107, 33, 168, 0.3) !important;
        }

    /* Form Floating Labels Focus Color */
    .form-control:focus {
        border-color: var(--primary-light);
        box-shadow: 0 0 0 0.25rem rgba(107, 33, 168, 0.25);
    }

        .form-control:focus ~ label {
            color: var(--primary-color);
        }

    /* Hyperlink Color (Create one here) */
    .text-decoration-none.fw-semibold {
        color: var(--primary-color);
        transition: color 0.3s ease;
    }

        .text-decoration-none.fw-semibold:hover {
            color: var(--primary-light);
        }

    /* Alert Styling for consistent look */
    .alert-danger {
        color: #842029;
        background-color: #f8d7da;
        border-color: #f5c2c7;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Restaurant Login</h3>
            <p class="text-muted">Access your business dashboard</p>
        </div>

        <form method="post" asp-action="Login" asp-controller="Restaurant">
            <div class="form-floating mb-3">
                <input asp-for="email" class="form-control" placeholder="Email address" />
                <label asp-for="email"><i class="bi bi-envelope-fill me-2"></i>Email address</label>
                <span asp-validation-for="email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="passwordHash" type="password" class="form-control" placeholder="Password" />
                <label asp-for="passwordHash"><i class="bi bi-lock-fill me-2"></i>Password</label>
                <span asp-validation-for="passwordHash" class="text-danger small"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.msg))
            {
                <div class="alert alert-danger py-2 small">@Model.msg</div>
            }

            <button type="submit" formtarget="_self" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                <i class="bi bi-box-arrow-in-right me-1"></i> Log In
            </button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">Don’t have an account?</small><br />
            <a asp-controller="Restaurant" asp-action="SignUp" class="text-decoration-none fw-semibold">
                Create one here
            </a>
        </div>

        <hr class="my-4" />

        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-secondary">
                <i class="bi bi-house-door-fill me-1"></i>Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}