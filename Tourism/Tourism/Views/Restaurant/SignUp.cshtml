@using Tourism.ViewModel
@model RestaurantSignUpViewModel

@{
    ViewData["Title"] = "Restaurant Sign Up";
    Layout = null; // Removing layout for a full-page centered form experience
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<style>
    :root {
        /* Updated to Purple Theme */
        --primary-color: #6b21a8; /* Dark Purple */
        --primary-light: #8b5cf6; /* Light Purple */
        --dark-bg: #f7f9fc;
        --text-color: #2d3436;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, var(--dark-bg), #ffffff);
        min-height: 100vh;
        /* Removed align-items: center; to allow content to start higher */
        display: flex;
        justify-content: center;
        /* Changed to use padding-top/bottom for spacing */
        padding: 40px 0;
        /* Added more padding-top for extra space */
        padding-top: 60px;
    }

    .signup-container {
        max-width: 700px;
        width: 100%;
        /* Ensures the container stays above the footer padding */
        margin-bottom: 40px;
    }

    .card {
        border: 1px solid rgba(107, 33, 168, 0.1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
        background-color: #ffffff;
        border-radius: 15px;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .form-group label {
        font-weight: 500;
        color: var(--text-color);
        margin-bottom: 0.5rem;
    }

    /* Floating Input fields */
    .form-control:focus {
        border-color: var(--primary-light);
        box-shadow: 0 0 0 0.25rem rgba(107, 33, 168, 0.25);
    }

    /* Primary Button Styling */
    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border: none;
        transition: all 0.3s ease;
        font-weight: 600;
        padding: 12px;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #581c87, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(107, 33, 168, 0.4) !important;
        }

    /* Already Registered Link */
    .login-link {
        color: var(--primary-color);
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .login-link:hover {
            color: var(--primary-light);
        }

    /* General Heading/Alert Styling */
    h2 {
        font-weight: 700;
        color: var(--primary-color);
    }

    .alert-success {
        color: #0f5132;
        background-color: #d1e7dd;
        border-color: #badbcc;
    }
</style>

<div class="signup-container">
    <div class="text-center mb-4">
        <h2 class="mb-2">Restaurant Sign Up</h2>
        <p class="text-muted">Register your establishment to feature on the marketplace.</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="SignUp" asp-controller="Restaurant" method="post" enctype="multipart/form-data">

        <div class="card p-4 mb-4">
            <h4 class="mb-3 text-primary"><i class="bi bi-shop me-2"></i>Restaurant Details</h4>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="name"><i class="bi bi-tag-fill me-1"></i>Restaurant Name</label>
                        <input asp-for="name" class="form-control" placeholder="Enter your Restaurant name" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="hotline"><i class="bi bi-telephone-fill me-1"></i>Hotline</label>
                        <input asp-for="hotline" class="form-control" placeholder="12345 (Example)" />
                        <span asp-validation-for="hotline" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="address"><i class="bi bi-geo-alt-fill me-1"></i>Address</label>
                <input asp-for="address" class="form-control" placeholder="Enter your restaurant address" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="description"><i class="bi bi-card-text me-1"></i>Restaurant Description</label>
                <textarea asp-for="description" class="form-control" rows="3" placeholder="Tell customers about your restaurant (cuisine, atmosphere, etc.)"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-upload me-1"></i>Upload Restaurant Logo</label>
                <input asp-for="UploadedImage" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="UploadedImage" class="text-danger small"></span>
            </div>
        </div>

        <div class="card p-4 mb-4">
            <h4 class="mb-3 text-primary"><i class="bi bi-person-fill me-2"></i>Account Credentials</h4>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="email"><i class="bi bi-envelope-fill me-1"></i>Email Address (Login)</label>
                        <input asp-for="email" class="form-control" placeholder="example@gmail.com" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="passwordHash"><i class="bi bi-lock-fill me-1"></i>Password</label>
                        <input asp-for="passwordHash" id="passwordHash" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="passwordHash" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="confirmPassword"><i class="bi bi-lock-fill me-1"></i>Confirm Password</label>
                        <input id="confirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                        <span id="passwordMatchError" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card p-4 mb-4">
            <h4 class="mb-3 text-primary"><i class="bi bi-credit-card-fill me-2"></i>Payment Details (For Fee Collection)</h4>

            <div class="row">
                <div class="col-12">
                    <div class="form-group mb-3">
                        <label asp-for="creditCard.CardHolder">Card Holder Name</label>
                        <input asp-for="creditCard.CardHolder" class="form-control" placeholder="Full name on card" />
                        <span asp-validation-for="creditCard.CardHolder" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group mb-3">
                        <label asp-for="creditCard.CardNumber">Card Number</label>
                        <input asp-for="creditCard.CardNumber" class="form-control" maxlength="16" placeholder="1234 5678 9012 3456" />
                        <span asp-validation-for="creditCard.CardNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="creditCard.ExpiryDate">Expiry Date (MM/YY)</label>
                        <input asp-for="creditCard.ExpiryDate" class="form-control" placeholder="MM/YY" />
                        <span asp-validation-for="creditCard.ExpiryDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="creditCard.CVV">CVV</label>
                        <input asp-for="creditCard.CVV" class="form-control" maxlength="3" placeholder="123" />
                        <span asp-validation-for="creditCard.CVV" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>


        <button type="submit" formtarget="_self" class="btn btn-primary w-100 shadow-lg">
            <i class="bi bi-check-circle-fill me-1"></i> Register Restaurant
        </button>
    </form>

    <div class="text-center mt-3">
        <small class="text-muted">Already registered?</small>
        <a asp-controller="Restaurant" asp-action="Login" class="login-link text-decoration-none">
            Log in here
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            const pass = document.getElementById("passwordHash").value;
            const confirm = document.getElementById("confirmPassword").value;
            const errorElement = document.getElementById("passwordMatchError");

            if (pass !== confirm) {
                e.preventDefault();
                errorElement.textContent = "Passwords do not match!";
            } else {
                errorElement.textContent = "";
            }
        });
    </script>
}