@model Tourism.ViewModel.HotelSignUpViewModel

@{
    ViewData["Title"] = "Hotel Sign Up";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        /* Consistent Purple Theme */
        --primary-color: #6b21a8; /* Dark Purple */
        --primary-light: #8b5cf6; /* Light Purple */
        --dark-bg: #f7f9fc;
        --text-color: #2d3436;
    }

    body {
        /* Applied light gradient background */
        background: linear-gradient(135deg, var(--dark-bg), #ffffff);
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        display: flex;
        /* Keep alignment centered but use padding for flow */
        align-items: flex-start;
        justify-content: center;
        padding: 60px 20px; /* Added top padding */
    }

    .signup-card {
        background: white;
        border: 1px solid rgba(107, 33, 168, 0.1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
        border-radius: 15px;
        padding: 40px;
        max-width: 800px;
        width: 100%;
        margin-bottom: 40px;
    }

    /* --- Remaining Styles (Unchanged) --- */

    .header-title {
        color: var(--primary-color);
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 10px;
    }

    .section-title {
        color: var(--primary-color);
        font-weight: 700;
        font-size: 1.4rem;
        margin-top: 30px;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(107, 33, 168, 0.1);
    }

    .form-group-custom {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 5px;
    }

    .form-control, .form-select {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 0.95rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-light);
            box-shadow: 0 0 0 0.25rem rgba(107, 33, 168, 0.25);
        }

    .form-group-custom .form-label::after {
        content: " *";
        color: red;
    }

    .btn-submit-gradient {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border: none;
        color: white;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-submit-gradient:hover {
            background: linear-gradient(135deg, #581c87, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(107, 33, 168, 0.4) !important;
        }

    .text-danger {
        font-size: 0.85rem;
    }

    .login-link a {
        color: var(--primary-color);
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .login-link a:hover {
            color: var(--primary-light);
            text-decoration: underline;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="signup-card">
                <div class="text-center mb-4">
                    <h1 class="header-title">Hotel Registration</h1>
                    <p class="text-muted">Register your property to join the platform.</p>
                </div>

                <form method="post" asp-action="SignUp" asp-controller="Hotel" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 small"></div>

                    <h3 class="section-title"><i class="bi bi-building-fill me-2"></i>Hotel Information</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="Name" class="form-label">Hotel Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter hotel name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your hotel and its services (cuisine, amenities, views, etc.)"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <h3 class="section-title"><i class="bi bi-shield-lock-fill me-2"></i>Security Details</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" id="Password" type="password" class="form-control" placeholder="Enter password (min 6 characters)" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                <span id="passwordMatchError" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <h3 class="section-title"><i class="bi bi-geo-alt-fill me-2"></i>Location & Contact</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="Hotline" class="form-label">Hotline/Phone Number</label>
                                <input asp-for="Hotline" class="form-control" placeholder="Example: 01xxxxxxxxx" />
                                <span asp-validation-for="Hotline" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="Governorate" class="form-label">Governorate</label>
                                <select asp-for="Governorate"
                                        asp-items="Model.GovernorateList"
                                        class="form-select"
                                        id="GovernorateDropdown"></select>
                                <span asp-validation-for="Governorate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group-custom" id="OtherGovernorateField">
                        <label asp-for="OtherGovernorate" class="form-label">Please Specify Governorate</label>
                        <input asp-for="OtherGovernorate" class="form-control" id="OtherGovernorate" placeholder="Enter Governorate name" />
                        <span asp-validation-for="OtherGovernorate" class="text-danger small"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Address" class="form-label">Street Address / Detailed Location</label>
                        <input asp-for="Address" class="form-control" placeholder="Enter the detailed address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <h3 class="section-title"><i class="bi bi-file-earmark-arrow-up-fill me-2"></i>Documents & Files</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="PicFile" class="form-label">Hotel Image</label>
                                <input asp-for="PicFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="PicFile" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="VerificationDocumentFile" class="form-label">Verification Document </label>
                                <input asp-for="VerificationDocumentFile" type="file" class="form-control" accept=".pdf,.doc,.docx,image/*" />
                                <span asp-validation-for="VerificationDocumentFile" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <h3 class="section-title"><i class="bi bi-credit-card-fill me-2"></i>Credit Card Details (For Fee Collection)</h3>
                    <div class="form-group-custom">
                        <label asp-for="CreditCard.CardHolder" class="form-label">Card Holder Name</label>
                        <input asp-for="CreditCard.CardHolder" class="form-control" placeholder="Full Name on Card" />
                        <span asp-validation-for="CreditCard.CardHolder" class="text-danger small"></span>
                    </div>
                    <div class="form-group-custom">
                        <label asp-for="CreditCard.CardNumber" class="form-label">Card Number</label>
                        <input asp-for="CreditCard.CardNumber" class="form-control" placeholder="Enter 16-digit card number" />
                        <span asp-validation-for="CreditCard.CardNumber" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="CreditCard.CVV" class="form-label">CVV</label>
                                <input asp-for="CreditCard.CVV" class="form-control" maxlength="3" placeholder="123" />
                                <span asp-validation-for="CreditCard.CVV" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <label asp-for="CreditCard.ExpiryDate" class="form-label">Expiry Date (MM/YY)</label>
                                <input asp-for="CreditCard.ExpiryDate" class="form-control" placeholder="MM/YY" />
                                <span asp-validation-for="CreditCard.ExpiryDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-submit-gradient btn-lg shadow">
                            <i class="bi bi-check-circle-fill me-1"></i> Register Hotel
                        </button>
                    </div>

                    <div class="text-center mt-3 login-link">
                        <p class="text-muted">Have an account? <a asp-action="Login" asp-controller="Hotel">Log in here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Governorate Dropdown logic
            var dropdown = document.getElementById('GovernorateDropdown');
            var otherField = document.getElementById('OtherGovernorateField');
            var otherInput = document.getElementById('OtherGovernorate');

            function toggleOtherField() {
                if (dropdown.value === 'Other') {
                    otherField.style.display = 'block';
                } else {
                    otherField.style.display = 'none';
                    otherInput.value = ''; // Clear the value if the field is hidden
                }
            }

            dropdown.addEventListener('change', toggleOtherField);
            toggleOtherField();

            // Password Match Validation
            document.querySelector("form").addEventListener("submit", function (e) {
                const pass = document.getElementById("Password").value;
                const confirm = document.getElementById("ConfirmPassword").value;
                const errorElement = document.getElementById("passwordMatchError");

                if (pass && confirm && pass !== confirm) {
                    e.preventDefault();
                    errorElement.textContent = "Passwords do not match!";
                } else {
                    errorElement.textContent = "";
                }
            });
        });
    </script>
}