@model List<Tourism.ViewModels.TripOrdersVM>

@{
    ViewData["Title"] = "Booked Trips";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
    }

    .page-header {
        color: #6b21a8;
        font-weight: 700;
        letter-spacing: -0.5px;
    }

    .total-trips-badge {
        font-size: 1.5rem;
        padding: 12px 20px;
        background: linear-gradient(135deg, #6b21a8 0%, #9333ea 100%);
        color: white;
        border: none;
    }

    /* Card Styling */
    .trip-card {
        border: none;
        border-radius: 16px;
        background: #fff;
        box-shadow: 0 4px 20px rgba(107, 33, 168, 0.1);
        transition: all 0.3s ease;
        height: 100%;
        overflow: hidden;
    }

        .trip-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 35px rgba(107, 33, 168, 0.2);
        }

    .card-header-custom {
        background: linear-gradient(135deg, #6b21a8 0%, #9333ea 100%);
        color: white;
        padding: 1.5rem;
        position: relative;
    }

    .trip-price-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        padding: 8px 16px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
        color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .trip-title {
        font-size: 1.4rem;
        margin: 0;
        font-weight: 700;
        padding-right: 100px;
    }

    .trip-destination {
        font-size: 0.95rem;
        opacity: 0.95;
        margin-top: 8px;
        display: block;
    }

        .trip-destination i {
            margin-right: 5px;
        }

    .card-body-custom {
        padding: 1.5rem;
    }

    /* Stats Row */
    .stats-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
    }

    .stat-item {
        font-size: 0.9rem;
        color: #6b21a8;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        color: #6b21a8;
        font-weight: 800;
        font-size: 2.5rem;
    }

    /* Table Styling */
    .table-custom {
        width: 100%;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

        .table-custom th {
            color: #6b21a8;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            border-bottom: 2px solid #e9ecef;
            padding: 12px 8px;
        }

        .table-custom td {
            padding: 14px 8px;
            border-bottom: 1px solid #f8f9fa;
            color: #2c3e50;
            vertical-align: middle;
        }

        .table-custom tr:last-child td {
            border-bottom: none;
        }

        .table-custom tbody tr:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }

    .avatar-circle {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, #6b21a8 0%, #9333ea 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        color: white;
        font-size: 0.9rem;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(107, 33, 168, 0.3);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    .empty-icon {
        font-size: 4rem;
        color: #dee2e6;
        margin-bottom: 1.5rem;
    }

    /* Button */
    .btn-details {
        width: 100%;
        border-radius: 10px;
        padding: 12px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        background: linear-gradient(135deg, #6b21a8 0%, #9333ea 100%);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-details:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(107, 33, 168, 0.3);
            color: white;
        }

    .section-title {
        font-size: 0.8rem;
        letter-spacing: 1.5px;
        color: #6b21a8;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .quantity-badge {
        background: linear-gradient(135deg, #6b21a8 0%, #9333ea 100%);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 600;
    }

    .price-text {
        color: #6b21a8;
        font-weight: 700;
        font-size: 1rem;
    }

    .back-button {
        background: linear-gradient(135deg, #6b21a8 0%, #9333ea 100%);
        color: white;
        padding: 10px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(107, 33, 168, 0.3);
            color: white;
        }
</style>

<div class="container py-5">
    <!-- Back Button -->
    <div class="mb-4">
        <a asp-controller="TourGuide" asp-action="TourGuideDashboard" class="back-button">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="page-header">
            <i class="bi bi-calendar-check"></i> Booked Trips Dashboard
        </h2>
        <span class="badge total-trips-badge shadow">
            Total Trips: @(Model?.Count() ?? 0)
        </span>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">📭</div>
            <h4 class="text-muted mb-3">No Bookings Yet</h4>
            <p class="text-secondary">You don't have any booked trips at the moment. Once tourists book your trips, they will appear here.</p>
            <a asp-controller="TourGuide" asp-action="TourGuideDashboard" class="btn back-button mt-3">
                Go to Dashboard
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var trip in Model)
            {
                <div class="col-lg-6 d-flex align-items-stretch">
                    <div class="trip-card w-100">
                        <!-- Card Header with Gradient -->
                        <div class="card-header-custom">
                            <div class="trip-price-badge">
                                $@trip.Cost.ToString("0.00")
                            </div>
                            <h4 class="trip-title">@trip.TripName</h4>
                            <span class="trip-destination">
                                <i class="bi bi-geo-alt-fill"></i> @trip.Destination
                            </span>
                        </div>

                        <div class="card-body-custom">
                            <!-- Stats Overview -->
                            <div class="stats-row">
                                <div class="stat-item">
                                    Total Bookings
                                </div>
                                <div class="stat-value">
                                    @trip.TotalBookingsCount
                                </div>
                            </div>

                            <!-- Tourist List -->
                            <h6 class="section-title">
                                <i class="bi bi-people-fill"></i> PASSENGER MANIFEST
                            </h6>

                            @if (trip.Bookings != null && trip.Bookings.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table-custom">
                                        <thead>
                                            <tr>
                                                <th style="width:55%;">Tourist</th>
                                                <th class="text-center" style="width:20%;">Seats</th>
                                                <th class="text-end" style="width:25%;">Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var booking in trip.Bookings.Take(5))
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-circle">
                                                                @booking.TouristName.Substring(0, 1).ToUpper()
                                                            </div>
                                                            <span class="text-truncate" style="max-width: 180px;">
                                                                @booking.TouristName
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="quantity-badge">
                                                            @booking.Quantity
                                                        </span>
                                                    </td>
                                                    <td class="text-end price-text">
                                                        $@booking.TotalPrice.ToString("0.00")
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (trip.Bookings.Count > 5)
                                {
                                    <div class="text-center mb-3">
                                        <small class="text-muted fst-italic">
                                            <i class="bi bi-three-dots"></i> + @(trip.Bookings.Count - 5) more tourists
                                        </small>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4 text-muted fst-italic">
                                    <i class="bi bi-inbox"></i>
                                    <p class="mb-0 mt-2">No booking details available.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>