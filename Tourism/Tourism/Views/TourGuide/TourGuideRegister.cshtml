@model Tourism.Models.TourGuide

@{
    ViewData["Title"] = "Tour Guide Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tour Guide Sign Up - Tourism</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6b21a8;
            --primary-light: #8b5cf6;
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            background: linear-gradient(135deg, var(--dark-bg), #ffffff);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            padding: 60px 20px;
        }

        .signup-container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
            border: 1px solid rgba(107, 33, 168, 0.1);
            max-width: 650px;
            width: 100%;
            padding: 40px;
        }

        .signup-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .signup-header h1 {
                color: var(--primary-color);
                font-weight: 700;
                font-size: 2.2rem;
                margin-bottom: 5px;
            }

            .signup-header p {
                color: #6c757d;
                font-size: 1rem;
            }

        .form-label {
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 5px;
        }

        .form-control, .form-select {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-light);
                box-shadow: 0 0 0 0.25rem rgba(107, 33, 168, 0.25);
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
        }

        .btn-signup {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            color: white;
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            margin-top: 25px;
            transition: all 0.3s;
        }

            .btn-signup:hover {
                background: linear-gradient(135deg, #581c87, var(--primary-color));
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(107, 33, 168, 0.4) !important;
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            color: #666;
        }

            .login-link a {
                color: var(--primary-color);
                font-weight: 600;
                text-decoration: none;
            }

                .login-link a:hover {
                    color: var(--primary-light);
                    text-decoration: underline;
                }

        .section-title {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.4rem;
            margin-top: 30px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(107, 33, 168, 0.1);
        }

        .required-field::after {
            content: " *";
            color: red;
        }

        .validation-summary {
            background-color: #f8d7da;
            color: #842029;
            border: 1px solid #f5c6cb;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }

        .languages-options {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
        }

        .lang-pill {
            border: none;
            border-radius: 999px;
            padding: 6px 14px;
            font-size: 0.9rem;
            cursor: pointer;
            background-color: #ffffff;
            color: #333;
            transition: all 0.2s ease;
            white-space: nowrap;
            border: 1px solid #dee2e6;
        }

            .lang-pill:hover {
                background-color: #e9ecef;
                border-color: var(--primary-light);
            }

            .lang-pill.active {
                background-color: var(--primary-color);
                color: #fff;
                font-weight: 600;
                border-color: var(--primary-color);
            }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="signup-header">
            <h1>Become a Tour Guide</h1>
            <p>Share your expertise and guide travelers around the world!</p>
        </div>

        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="TourGuideRegister" method="post" enctype="multipart/form-data">
            <h3 class="section-title"><i class="bi bi-person-fill me-2"></i>Personal Information</h3>

            <h3 class="section-title"><i class="bi bi-person-fill me-2"></i>Personal Information</h3>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="firstName" class="form-label required-field">First Name</label>
                    <input asp-for="firstName" class="form-control" placeholder="Enter your first name" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="lastName" class="form-label required-field">Last Name</label>
                    <input asp-for="lastName" class="form-control" placeholder="Enter your last name" />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="age" class="form-label required-field">Age</label>
                    <input asp-for="age" type="number" class="form-control" placeholder="Age" min="18" max="100" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="gender" class="form-label required-field">Gender</label>
                    <select asp-for="gender" class="form-select">
                        <option value="">Select gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="nationality" class="form-label required-field">Nationality</label>
                    <input asp-for="nationality" class="form-control" placeholder="e.g., Egyptian" />
                    <span asp-validation-for="nationality" class="text-danger"></span>
                </div>
            </div>

            <h3 class="section-title"><i class="bi bi-briefcase-fill me-2"></i>Professional Information</h3>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="experienceYears" class="form-label required-field">Years of Experience</label>
                    <input asp-for="experienceYears" type="number" class="form-control" placeholder="Years" min="0" max="60" />
                    <span asp-validation-for="experienceYears" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="phoneNumber" class="form-label required-field">Phone Number</label>
                    <input asp-for="phoneNumber" class="form-control" placeholder="+1234567890" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label required-field">Languages (Select at least 2)</label>
                <div id="languagesOptions" class="languages-options">
                    <button type="button" class="lang-pill" data-value="Arabic">Arabic</button>
                    <button type="button" class="lang-pill" data-value="English">English</button>
                    <button type="button" class="lang-pill" data-value="French">French</button>
                    <button type="button" class="lang-pill" data-value="German">German</button>
                    <button type="button" class="lang-pill" data-value="Italian">Italian</button>
                    <button type="button" class="lang-pill" data-value="Spanish">Spanish</button>
                    <button type="button" class="lang-pill" data-value="Chinese">Chinese</button>
                    <button type="button" class="lang-pill" data-value="Japanese">Japanese</button>
                    <button type="button" class="lang-pill" data-value="Russian">Russian</button>
                    <button type="button" class="lang-pill" data-value="Turkish">Turkish</button>
                </div>
                <input type="hidden" asp-for="languages" id="languages" />
                <span asp-validation-for="languages" class="text-danger"></span>
                <span id="languagesError" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="pic" class="form-label required-field">Profile Picture</label>
                <input asp-for="pic" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="pic" class="text-danger"></span>
            </div>

            <h3 class="section-title"><i class="bi bi-envelope-fill me-2"></i>Contact & Security</h3>

            <div class="mb-3">
                <label asp-for="email" class="form-label required-field">Email Address</label>
                <input asp-for="email" type="email" class="form-control" placeholder="example@email.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="passwordHash" class="form-label required-field">Password</label>
                    <input asp-for="passwordHash" id="passwordHash" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="passwordHash" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="confirmPassword" class="form-label required-field">Confirm Password</label>
                    <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                    <span id="confirmPasswordError" class="text-danger"></span>
                </div>
            </div>

            <h3 class="section-title"><i class="bi bi-credit-card-fill me-2"></i>Payment Details</h3>

            <div class="mb-3">
                <label asp-for="creditCard.CardHolder" class="form-label required-field">Card Holder Name</label>
                <input asp-for="creditCard.CardHolder" class="form-control" placeholder="Full name on card" />
                <span asp-validation-for="creditCard.CardHolder" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="creditCard.CardNumber" class="form-label required-field">Card Number</label>
                <input asp-for="creditCard.CardNumber" class="form-control" maxlength="16" placeholder="1234 5678 9012 3456" />
                <span asp-validation-for="creditCard.CardNumber" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="creditCard.ExpiryDate" class="form-label required-field">Expiry Date (MM/YY)</label>
                    <input asp-for="creditCard.ExpiryDate" class="form-control" placeholder="MM/YY" />
                    <span asp-validation-for="creditCard.ExpiryDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="creditCard.CVV" class="form-label required-field">CVV</label>
                    <input asp-for="creditCard.CVV" class="form-control" maxlength="3" placeholder="123" />
                    <span asp-validation-for="creditCard.CVV" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-signup shadow-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Complete Registration
            </button>

            <div class="login-link">
                Already have an account? <a asp-action="Login" asp-controller="TourGuide">Login here</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Password confirmation
        const passwordInput = document.getElementById('passwordHash');
        const confirmInput = document.getElementById('confirmPassword');
        const confirmError = document.getElementById('confirmPasswordError');

        if (confirmInput && passwordInput) {
            confirmInput.addEventListener('input', function () {
                if (confirmInput.value !== passwordInput.value) {
                    confirmError.textContent = "Passwords do not match.";
                } else {
                    confirmError.textContent = "";
                }
            });
        }

        // Languages as pills: min 2 required
        const languagesContainer = document.getElementById('languagesOptions');
        const languagesHidden = document.getElementById('languages');
        const languagesError = document.getElementById('languagesError');

        function updateLanguages() {
            const activeButtons = languagesContainer.querySelectorAll('.lang-pill.active');
            const selectedValues = Array.from(activeButtons).map(btn => btn.getAttribute('data-value'));

            languagesHidden.value = selectedValues.join(',');

            if (selectedValues.length < 2) {
                languagesError.textContent = "Please select at least 2 languages.";
            } else {
                languagesError.textContent = "";
            }
        }

        if (languagesContainer && languagesHidden) {
            // Toggle active class on click
            languagesContainer.addEventListener('click', function (e) {
                if (e.target.classList.contains('lang-pill')) {
                    e.target.classList.toggle('active');
                    updateLanguages();
                }
            });

            // Initialize from model value (edit mode)
            const initialValue = languagesHidden.value;
            if (initialValue) {
                const initialLanguages = initialValue.split(',').map(v => v.trim());
                initialLanguages.forEach(lang => {
                    const btn = languagesContainer.querySelector(`.lang-pill[data-value="${lang}"]`);
                    if (btn) btn.classList.add('active');
                });
                updateLanguages();
            }
        }

        // Prevent form submit if less than 2 languages
        const form = document.querySelector('form');
        if (form && languagesContainer) {
            form.addEventListener('submit', function (e) {
                const pass = document.getElementById("passwordHash").value;
                const confirm = document.getElementById("confirmPassword").value;

                // Check password match
                if (pass !== confirm) {
                    e.preventDefault();
                    confirmError.textContent = "Passwords do not match!";
                    return;
                } else {
                    confirmError.textContent = "";
                }

                // Check languages
                const activeButtons = languagesContainer.querySelectorAll('.lang-pill.active');
                if (activeButtons.length < 2) {
                    e.preventDefault();
                    languagesError.textContent = "You must select at least 2 languages.";
                    languagesContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            });
        }
    </script>
</body>
</html>
