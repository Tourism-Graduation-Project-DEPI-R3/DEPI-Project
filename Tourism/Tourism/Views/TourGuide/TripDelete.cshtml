@model Tourism.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Trip
                    </h4>
                </div>

                <div class="card-body p-4">
                    <p class="fs-5">
                        Are you sure you want to delete this trip?
                    </p>

                    <hr />

                    <div class="mb-3">
                        <strong>Name:</strong> @Model.name
                    </div>

                    <div class="mb-3">
                        <strong>Destination:</strong> @Model.destination
                    </div>

                    <div class="mb-3">
                        <strong>Cost:</strong> @Model.cost
                    </div>

                    @if (Model.MainImage != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.MainImage)"
                             class="img-thumbnail mb-3"
                             style="max-width:200px" />
                    }

                    <form asp-controller="TourGuide"
                          asp-action="TripDeleteConfirmed"
                          method="post">

                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.id" />

                        <div class="d-flex justify-content-between mt-4 allowed-for-tourguide">
                            <a asp-controller="TourGuide"
                               asp-action="TourGuideDashboard"
                               class="btn btn-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
