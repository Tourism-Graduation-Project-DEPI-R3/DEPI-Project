@using Tourism.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Tour Guide Login";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f8f9fa;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
    }

    .login-card {
        width: 400px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
    }

    .login-title {
        color: #6b21a8;
        font-weight: 700;
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
    }

    .login-subtitle {
        color: #6b7280;
        font-size: 0.95rem;
        margin-bottom: 2rem;
    }

    .form-floating > label {
        color: #6b7280;
    }

    .form-control:focus {
        border-color: #6b21a8;
        box-shadow: 0 0 0 0.2rem rgba(107, 33, 168, 0.25);
    }

    .btn-purple {
        background: linear-gradient(135deg, #6b21a8, #8b5cf6);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-purple:hover {
            background: linear-gradient(135deg, #4b0f6b, #6b21a8);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(107, 33, 168, 0.4);
        }

    .register-link {
        color: #6b21a8;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .register-link:hover {
            color: #8b5cf6;
            text-decoration: underline;
        }

    .home-link {
        color: #6b7280;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .home-link:hover {
            color: #6b21a8;
        }
</style>

<div class="login-card">
    <div class="text-center">
        <h3 class="login-title">Tour Guide Login</h3>
        <p class="login-subtitle">Share your expertise and guide travelers</p>
    </div>

    <form method="post" asp-action="Login" asp-controller="TourGuide">
        @Html.AntiForgeryToken()
        
        <div class="form-floating mb-3">
            <input asp-for="email" class="form-control" placeholder="Email address" />
            <label asp-for="email"><i class="bi bi-envelope-fill me-2"></i>Email address</label>
            <span asp-validation-for="email" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="passwordHash" type="password" class="form-control" placeholder="Password" />
            <label asp-for="passwordHash"><i class="bi bi-lock-fill me-2"></i>Password</label>
            <span asp-validation-for="passwordHash" class="text-danger small"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.msg))
        {
            <div class="alert alert-danger py-2 small">@Model.msg</div>
        }

        <button type="submit" class="btn btn-purple w-100">
            <i class="bi bi-box-arrow-in-right me-1"></i> Login
        </button>
    </form>

    <div class="text-center mt-3">
        <small class="text-muted">Don't have an account?</small><br />
        <a asp-controller="TourGuide" asp-action="TourGuideRegister" class="register-link">
            Register as Tour Guide
        </a>
    </div>

    <hr class="my-4" />

    <div class="text-center">
        <a asp-controller="Home" asp-action="Index" class="home-link">
            <i class="bi bi-house-door-fill me-1"></i>Back to Home
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
