@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecreationalTourismWebsite</title>

    <!-- CSRF token for JS -->
    <meta name="csrf-token" content="@(Antiforgery.GetAndStoreTokens(ViewContext.HttpContext).RequestToken)" />

    <!-- Bootstrap (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecreationalTourismWebsite.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        .swal2-container {
            z-index: 99999 !important;
        }

        .page-wrapper {
            padding-top: 120px;
            min-height: calc(100vh - 200px);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .auth-bar {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e5e5;
        }

            .auth-bar .btn {
                font-size: 0.9rem;
            }

        /* Utility to hide elements */
        .hidden {
            display: none !important;
        }

        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        a {
            color: #0077cc;
        }

        .btn-primary {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        button.accept-policy {
            font-size: 1rem;
            line-height: inherit;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }
    </style>
</head>

<body data-user-role="@(User.Identity.IsAuthenticated ? (User.IsInRole("TourGuide") ? "TourGuide" : "Other") : "Guest")">

    <!-- HEADER -->
    @await Html.PartialAsync("_HeaderPartialView")

    <!-- MAIN CONTENT -->
    <div class="page-wrapper">
        <main role="main" class="container pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    @await Html.PartialAsync("_FooterPartialView")

    <!-- Core Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Authentication & Role Logic -->
    <script>
        const isAuthenticated = @((User.Identity?.IsAuthenticated ?? false).ToString().ToLower());
        const isTourist = @User.IsInRole("Tourist").ToString().ToLower();

        function openTourOrAuth(tourUrl) {
            if (isAuthenticated && isTourist) {
                window.location.href = tourUrl;
                return;
            }
            Swal.fire({
                icon: 'warning',
                title: 'Sign in required',
                text: 'You need to login as a tourist or create a tourist account to access this tour.',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'Login',
                denyButtonText: 'Register',
                cancelButtonText: 'Stay here'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Login", "Tourism")';
                } else if (result.isDenied) {
                    window.location.href = '@Url.Action("ExploreRegisterations", "Tourism")';
                }
            });
        }

        // Prevent tour-guide users from accessing pages
        document.addEventListener('click', function (e) {
            const role = document.body.dataset.userRole;
            if (role !== 'TourGuide') return;
            const link = e.target.closest('a');
            if (!link) return;
            if (link.classList.contains('allowed-for-tourguide') || link.closest('.allowed-for-tourguide')) return;
            const href = link.getAttribute('href');
            if (!href || href.startsWith('#') || href === 'javascript:void(0);') return;
            e.preventDefault();
            Swal.fire('Access Denied', 'This page is not accessible with a TourGuide account.', 'error');
        });
    </script>

    <!-- Cart Logic -->
    <script>
        // 1. Helper Functions
        function getCsrfHeaders() {
            const headers = { 'Content-Type': 'application/json', 'Accept': 'application/json' };
            const token = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content');
            if (token) headers['RequestVerificationToken'] = token;
            return headers;
        }

        async function safeParseJsonResponse(response) {
            try {
                return await response.json();
            } catch (err) {
                try {
                    const txt = await response.text();
                    if (!txt) return {};
                    return JSON.parse(txt);
                } catch (e) {
                    return {};
                }
            }
        }

        async function refreshCartCount() {
            try {
                const res = await fetch('/TourPackages/GetCartCount', { credentials: 'same-origin', headers: { 'Accept': 'application/json' } });
                if (!res.ok) return;
                const j = await safeParseJsonResponse(res);
                const countSpan = document.getElementById("cartCount");
                if (countSpan) {
                    countSpan.textContent = (j && (j.count !== undefined)) ? j.count : 0;
                }
            } catch (err) {
                console.error('refreshCartCount error', err);
            }
        }

        // Helper to update seats on the page instantly (Optional use, simplified)
        function updatePageSeatDisplay(tripId, remainingSeats, capacity) {
            const seatElements = document.querySelectorAll(`#remainingSeatsValue[data-trip-id="${tripId}"], .remaining-seats[data-trip-id="${tripId}"]`);
            const btn = document.querySelector(`.btn-book-now[data-trip-id="${tripId}"]`);

            seatElements.forEach(el => {
                el.textContent = remainingSeats;
                el.style.color = remainingSeats <= 0 ? "red" : "green";
            });

            if (btn) {
                btn.dataset.remaining = remainingSeats;
            }
        }

        // Core function to change quantity
        async function changeCartQuantity(tripId, delta) {
            try {
                const res = await fetch('/TourPackages/ChangeCartQuantity', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: getCsrfHeaders(),
                    body: JSON.stringify({ TripId: tripId, Delta: delta })
                });

                const data = await safeParseJsonResponse(res);

                // Silent Fail on "Not Enough Seats" or Error
                if (!res.ok) {
                    return null;
                }

                // Update cart count in header
                await refreshCartCount();

                return data;
            } catch (err) {
                return null;
            }
        }

        // 2. DOM Ready Logic
        document.addEventListener("DOMContentLoaded", function () {

            const cartBtn       = document.getElementById("cartBtn");
            const cartModal     = document.getElementById("cartModal");
            const closeCart     = document.getElementById("closeCart");
            const clearCartBtn  = document.getElementById("clearCart");
            const cartItemDiv   = document.getElementById("cartItemContainer");
            const cartTotalSpan = document.getElementById("cartTotal");
            const cartNextBtn   = document.getElementById("cartNext");

            refreshCartCount();

            // Function: Load FULL Cart (for top navbar button)
            async function loadCartFromServer() {
                try {
                    const res = await fetch('/TourPackages/GetCart', { credentials: 'same-origin', headers: { 'Accept': 'application/json' } });
                    if (!res.ok) return;
                    const items = await safeParseJsonResponse(res);
                    renderCartItems(Array.isArray(items) ? items : []);
                } catch (err) { console.error(err); }
            }

            // Function: Render items HTML
            function renderCartItems(items) {
                if(!cartItemDiv) return;
                cartItemDiv.innerHTML = "";
                let total = 0;

                if(!items || items.length === 0) {
                     cartItemDiv.innerHTML = "<p class='text-center p-3'>Your cart is empty.</p>";
                }

                items.forEach(item => {
                    total += (item.totalPrice || 0);
                    cartItemDiv.innerHTML += `
                        <div class="cart-item d-flex align-items-center mb-3 border-bottom pb-2" data-trip-id="${item.tripId}">
                            <img src="${item.image || '/images/placeholder-trip.webp'}" alt="${item.tripName}" style="width:60px; height:60px; object-fit:cover; margin-right:15px; border-radius:5px;">
                            <div class="flex-grow-1">
                                <div style="font-size:12px;color:#888">Trip</div>
                                <div style="font-weight:600;font-size:16px">${item.tripName}</div>
                                <div style="color:#555">
                                    $<span class="unit-price" data-unit-price="${item.unitPrice}">${item.unitPrice}</span>
                                </div>
                            </div>
                            <div class="cart-qty-controls d-flex align-items-center">
                                <button class="btn btn-sm btn-outline-secondary qty-minus cart-qty-btn" type="button">-</button>
                                <span class="qty-value mx-2" style="font-weight:bold">${item.quantity}</span>
                                <button class="btn btn-sm btn-outline-secondary qty-plus cart-qty-btn" type="button">+</button>
                            </div>
                        </div>
                    `;
                });
                if (cartTotalSpan) cartTotalSpan.textContent = (total || 0).toFixed(2);
            }

            // Navbar Cart Click -> Shows All Items
            if (cartBtn) {
                cartBtn.addEventListener("click", function () {
                    loadCartFromServer();
                    if (cartModal) cartModal.classList.remove("hidden");
                });
            }

            if (closeCart) {
                closeCart.addEventListener("click", function () {
                    if (cartModal) cartModal.classList.add("hidden");
                });
            }

            // Event Delegation: (+ / -) Logic
            if(cartItemDiv) {
                cartItemDiv.addEventListener('click', async function(e) {
                    const plusBtn = e.target.closest('.qty-plus');
                    const minusBtn = e.target.closest('.qty-minus');

                    if (!plusBtn && !minusBtn) return;

                    const row = e.target.closest('.cart-item');
                    if(!row) return;

                    const tripId = parseInt(row.dataset.tripId);
                    const qtySpan = row.querySelector('.qty-value');

                    if (plusBtn) {
                        try {
                            const data = await changeCartQuantity(tripId, 1);
                            if (data) {
                                if (qtySpan) qtySpan.textContent = data.quantity;
                                if (cartTotalSpan) cartTotalSpan.textContent = (data.cartTotal || 0).toFixed(2);
                            }
                        } catch(err) { }
                    }

                    if (minusBtn) {
                        let currentQty = parseInt(qtySpan?.textContent) || 0;
                        if(currentQty <= 0) {
                            Swal.fire({
                                title: 'Remove item?',
                                text: "Remove this trip from cart?",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#d33',
                                confirmButtonText: 'Yes'
                            }).then(async (result) => {
                                if (result.isConfirmed) {
                                    try {
                                        const res = await fetch('/TourPackages/CancelBooking', {
                                            method: 'POST',
                                            credentials: 'same-origin',
                                            headers: getCsrfHeaders(),
                                            body: JSON.stringify({ TripId: tripId })
                                        });
                                        if(res.ok) {
                                            row.remove();
                                            await refreshCartCount();
                                            const unitPriceEl = row.querySelector('.unit-price');
                                            const unitPrice = unitPriceEl ? parseFloat(unitPriceEl.textContent) : 0;
                                            const newTotal = Math.max(0, (parseFloat(cartTotalSpan?.textContent || "0") - unitPrice));
                                            if (cartTotalSpan) cartTotalSpan.textContent = newTotal.toFixed(2);
                                            Swal.fire('Removed!', '', 'success');
                                        }
                                    } catch (err) {
                                        Swal.fire('Error', 'Failed to remove item', 'error');
                                    }
                                }
                            });
                        } else {
                            try {
                                const data = await changeCartQuantity(tripId, -1);
                                if (data) {
                                    if (qtySpan) qtySpan.textContent = data.quantity;
                                    if (cartTotalSpan) cartTotalSpan.textContent = (data.cartTotal || 0).toFixed(2);
                                }
                            } catch(err) { }
                        }
                    }
                });
            }

            // ==========================================
            // LOGIC 1: BOOK NOW -> Shows Modal with 0 (or current) Quantity
            // ==========================================
            document.querySelectorAll(".btn-book-now").forEach(btn => {
                btn.addEventListener("click", async function () {
                    if (!isAuthenticated || !isTourist) {
                         openTourOrAuth(window.location.href);
                         return;
                    }

                    const tripId = parseInt(this.dataset.tripId);
                    const tripName = this.dataset.tripName;
                    const tripPrice = parseFloat(this.dataset.tripPrice);
                    const tripImage = this.dataset.tripImage;

                    // -- CHANGE START: Don't call changeCartQuantity(tripId, 1) immediately --

                    // 1. Check current status from server to get accurate Total and existing Quantity
                    let currentQty = 0;
                    let currentTotal = 0.00;

                    try {
                        const res = await fetch('/TourPackages/GetCart', { credentials: 'same-origin', headers: { 'Accept': 'application/json' } });
                        if(res.ok) {
                            const items = await safeParseJsonResponse(res);
                            if(Array.isArray(items)) {
                                // Calculate total
                                items.forEach(i => currentTotal += (i.totalPrice || 0));
                                // Find if we already have this trip in cart
                                const found = items.find(i => i.tripId === tripId);
                                if(found) {
                                    currentQty = found.quantity;
                                }
                            }
                        }
                    } catch(e) { }

                    // 2. Render Modal. If new, currentQty is 0. If existing, it shows existing qty.
                    if(cartItemDiv) {
                        cartItemDiv.innerHTML = `
                            <div class="cart-item d-flex align-items-center mb-3 border-bottom pb-2" data-trip-id="${tripId}">
                                <img src="${tripImage || '/images/placeholder-trip.webp'}" alt="${tripName}" style="width:60px; height:60px; object-fit:cover; margin-right:15px; border-radius:5px;">
                                <div class="flex-grow-1">
                                    <div style="font-size:12px;color:#888">Trip</div>
                                    <div style="font-weight:600;font-size:16px">${tripName}</div>
                                    <div style="color:#555">
                                        $<span class="unit-price" data-unit-price="${tripPrice}">${tripPrice.toFixed(2)}</span>
                                    </div>
                                </div>
                                <div class="cart-qty-controls d-flex align-items-center">
                                    <button class="btn btn-sm btn-outline-secondary qty-minus cart-qty-btn" type="button">-</button>
                                    <span class="qty-value mx-2" style="font-weight:bold">${currentQty}</span>
                                    <button class="btn btn-sm btn-outline-secondary qty-plus cart-qty-btn" type="button">+</button>
                                </div>
                            </div>
                        `;

                        if (cartTotalSpan) cartTotalSpan.textContent = currentTotal.toFixed(2);
                    }

                    if (cartModal) cartModal.classList.remove("hidden");
                    // -- CHANGE END --
                });
            });

            // ==========================================
            // LOGIC 2: CLEAR CART
            // ==========================================
            if (clearCartBtn) {
                clearCartBtn.addEventListener("click", async function () {
                    const result = await Swal.fire({
                        title: 'Clear cart?',
                        text: 'Remove all items?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, clear it'
                    });

                    if (result.isConfirmed) {
                        try {
                            const cartRes = await fetch('/TourPackages/GetCart', { credentials: 'same-origin', headers: { 'Accept': 'application/json' } });
                            if(cartRes.ok) {
                                const items = await safeParseJsonResponse(cartRes);
                                for (const it of (Array.isArray(items) ? items : [])) {
                                    await fetch('/TourPackages/CancelBooking', {
                                        method: 'POST',
                                        credentials: 'same-origin',
                                        headers: getCsrfHeaders(),
                                        body: JSON.stringify({ TripId: it.tripId })
                                    });
                                }
                            }
                            await fetch('/TourPackages/ClearCart', { method: 'POST', credentials: 'same-origin', headers: getCsrfHeaders() });

                            cartItemDiv.innerHTML = "<p class='text-center p-3'>Your cart is empty.</p>";
                            if (cartTotalSpan) cartTotalSpan.textContent = "0.00";
                            refreshCartCount();
                            Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: 'Cart cleared', showConfirmButton: false, timer: 1000 });

                        } catch (err) {
                            Swal.fire('Error', 'Failed to clear cart', 'error');
                        }
                    }
                });
            }

            // ==========================================
            // LOGIC 3: NEXT -> Redirects to Payment Page
            // ==========================================
            if (cartNextBtn) {
                cartNextBtn.addEventListener("click", function () {
                    const cartItems = document.querySelectorAll(".cart-item");
                    if (cartItems.length === 0) {
                        Swal.fire("Cart is empty", "Please add a trip first.", "warning");
                        return;
                    }

                    // Check if quantity is 0
                    const qtySpan = document.querySelector(".qty-value");
                    if (qtySpan && parseInt(qtySpan.textContent) === 0) {
                         Swal.fire("Quantity is 0", "Please increase quantity to at least 1.", "warning");
                         return;
                    }

                    window.location.href = '@Url.Action("Payment", "TourPackages")';
                });
            }
        });
    </script>
</body>
</html>